<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/article_image"
            android:layout_height="200dp"
            android:layout_width="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/article_title"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:text="Huawei is shipping a lot more phones in spite of it all" />

        <TextView
            android:id="@+id/article_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            tools:text="There are a lot reasons to assume Huawei’s numbers would be on the decline. Even without getting caught smack in the middle of increasing trade tensions between two superpowers, the smartphone market has been trending down for some time now. A confluence of f…" />

    </LinearLayout>

</androidx.cardview.widget.CardView>